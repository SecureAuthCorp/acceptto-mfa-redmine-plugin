<p>
	<label><%= l(:label_enable_mfa) %></label>
    <% if !@user.mfa_access_token.present? %>
		<a href='<%=  Acceptto::Client.new(Rails.configuration.mfa_app_uid,Rails.configuration.mfa_app_secret, "#{Rails.configuration.redmine_host}/mfa/callback").authorize_link %>'><%= l(:mfa_enable_now) %></a>
	<% elsif %>
		<%= l(:mfa_already_enabled) %>
    <% end %>
</p>